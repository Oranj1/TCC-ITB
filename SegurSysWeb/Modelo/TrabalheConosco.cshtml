                }
                else
                {
                    <figure id="login">
                        <p style="color:#FFFFFF;font-size:12px">Bem Vindo @Html.Raw(Func.Nome)</p>
                    </figure>
                    <form method="get" action="Index.cshtml" id="frmSair">
                        <input type="hidden" value="sair" id="sair" name="sair" />
