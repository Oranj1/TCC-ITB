        <h2 class="h2TConosco">Trabalhe Conosco</h2>
        <div id="TConosco">
            <form method="post" id="fContato">


                <fieldset id="candidato">
                    <legend>Informações do Candidato</legend>

                    <p>
                        <label name="cNome"> Nome:</label>
                        <input type="text" name="tNome" size="30" maxlength="30" placeholder="Nome Completo" />
                    </p>

                    <p>
                        <label name="cMail">Email:</label>
                        <input type="email" name="tMail" size="30" maxlength="40" placeholder="Email" />
                    </p>



