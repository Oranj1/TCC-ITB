<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListaConfigActivity">

    <Switch
        android:id="@+id/swFlash"
        android:layout_width="408dp"
        android:layout_height="33dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:text="  Atalho Para Flash no Menu"
        android:textSize="24sp"
        android:theme="@style/CheckBox"
        app:layout_constraintBottom_toTopOf="@+id/lblTrocarSenha"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/lblTrocarSenha"
        android:layout_width="412dp"
        android:layout_height="34dp"
        android:layout_marginBottom="580dp"
        android:background="@drawable/cinza_claro"
        android:text="  Trocar Senha"
        android:textColor="@color/preto_true"
        android:textSize="24sp"
        android:theme="@style/CheckBox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>