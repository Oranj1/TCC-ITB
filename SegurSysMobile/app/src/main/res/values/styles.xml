<resources>

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/preto</item>
    </style>

    <style name = "EditTextTheme" parent ="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/preto</item>
    </style>

    <style name = "CheckBox" parent ="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/preto</item>
    </style>

    <style name = "Label" parent ="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/preto</item>
    </style>

    <style name = "Principal" parent ="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorAccent">@color/preto</item>
    </style>

</resources>