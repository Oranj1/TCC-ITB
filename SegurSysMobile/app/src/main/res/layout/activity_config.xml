<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MudarSenhaActivity">

    <TextView
        android:id="@+id/lblNewPass"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:text="@string/nova_senha"
        android:textColor="@color/preto"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/txtSenha"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lblConfirmNewPass"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="404dp"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:text="@string/confirmar_nova_senha"
        android:textColor="@color/preto"
        android:theme="@style/Label"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lblTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/digite_a_nova_senha"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp"
        android:theme="@style/Label"
        app:layout_constraintBottom_toTopOf="@+id/lblNewPass"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtSenha"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="456dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:ems="10"
        android:inputType="textPassword"
        android:maxLength="16"
        android:theme="@style/EditTextTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/txtConfirmarSenha"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="340dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:ems="10"
        android:inputType="textPassword"
        android:maxLength="16"
        android:theme="@style/EditTextTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnConfirmar"
        android:layout_width="188dp"
        android:layout_height="47dp"
        android:layout_marginBottom="236dp"
        android:layout_marginEnd="112dp"
        android:layout_marginRight="112dp"
        android:background="@drawable/fundo_botao"
        android:text="@string/confirmar"
        android:textColor="@color/branco"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>