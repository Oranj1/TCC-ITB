            <table class="table table-striped ">
                <thead>
                    <tr>
                        <th>Domingo</th>
                        <th>Segunda</th>
                        <th>Terça</th>
                        <th>Quarta</th>
                        <th>Quinta</th>
                        <th>Sexta</th>
                        <th>Sábado</th>
                    </tr>
                </thead>

                <tbody>

                    <tr>
                        @{
                            EscalaBLL escBLL = new EscalaBLL();
                            string[] diaSemana = new string[7] {"Domingo","Segunda","Terça","Quarta","Quinta","Sexta","Sábado" };
			    
                            int i = 0;
                            string tabela = "";
                            while (i < 7)
                            {
                                Escala esc = new Escala("", Func.Id_func,"", diaSemana[i], "", "", "", "", "", "");
                                tabela += escBLL.listarTabelaInicioHTML(esc);
                                i++;
                            }
                        }
                        @Html.Raw(tabela)
                    </tr>
                    <tr>
                        @{
                            i = 0;
                            tabela = "";
                            while (i < 7)
                            {
                                Escala esc = new Escala("", Func.Id_func, "", diaSemana[i], "", "", "", "", "", "");
                                tabela += escBLL.listarTabelaFimHTML(esc);
                                i++;
                            }
                        }
                        @Html.Raw(tabela)
                    </tr>
                </tbody>
            </table>
